<%- include('partials/header'); -%>
<main>
  <div class="row m-0">
    <div class="col-md-3 p-2 bg-blue-1 text-center" id="sidebar">
      <div id="menu" class="py-3">
        <div>
          <button class="sidebar-item" id="rmCalculator">1RM Calculator</button>
        </div>
        <div>
          <button class="sidebar-item sidebar-active" id="exercise">Add Exercise</button>
        </div>
        <div>
          <button class="sidebar-item " id="workout">Workout History</button>
        </div>
      </div>
    </div>

    <div class="col-md-9 pb-5 pt-3">
      <div class="pt-3 d-none" id="rm-body">
        <div class="row">
          <div class="col-md-6 p-4 border-end">
            <form id="rm-calc">

              <div class="form-floating mb-3">
                <input type="number" step="any" class="form-control" id="weightLifted" name="weightLifted" placeholder="weightLifted" autocomplete="off" required>
                <label for="weightLifted">Weight Lifted (in kg)</label>
              </div>
    
              <div class="form-floating mb-3">
                <input type="number" step="any" class="form-control" id="repsLifted" name="repsLifted" placeholder="repsLifted" autocomplete="off" required>
                <label for="repsLifted">Repetitions</label>
              </div>
    
              <div class="mb-3">
                <b class="mb-2">Select Exercise</b>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="exercise" id="bench" value="bench" checked>
                  <label class="form-check-label">
                    Bench Press
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="exercise" id="deadlift" >
                  <label class="form-check-label" for="deadlift">
                    Deadlift
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="exercise" id="squat" >
                  <label class="form-check-label" for="squat">
                    Squat
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="exercise" id="overhead">
                  <label class="form-check-label" for="overhead">
                    Overhead Press
                  </label>
                </div>
              </div>
    
              <div>
                <input type="submit" class="btn btn-primary rounded-4">
              </div>
            </form>
          </div>
          <div class="col-md-6 p-4">
            <h4 class="text-success">Last Entry</h4>
            <table class=" w-75">
              <tr>
                <td><b>Bench Press</b></td>
                <td><span id="bench-history">N/A</span></td>
              </tr>
              <tr>
                <td><b>Deadlift</b></td>
                <td><span id="deadlift-history">N/A</span></td>
              </tr>
              <tr>
                <td><b>Squat</b></td>
                <td><span id="squat-history">N/A</span></td>
              </tr>
              <tr>
                <td><b>Overhead Press</b></td>
                <td><span id="overhead-history">N/A</span></td>
              </tr>
            </table>
            <div class="d-none" id="rm-res">
              <h4 class="text-success mt-4">
                1RM for
                <span id="resExType"></span>
              </h4>
              <p>
                <span class="fs-4" id="rm-val"></span>
                <span>kg</span>
              </p>
            </div>
          </div>
        </div>  
       
      </div>

      <div class="training-body-box pt-3" id="ex-body">
        <form action="/tools/training_tool" method="post">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="exerciseName" name="exerciseName" placeholder="exerciseName" autocomplete="off" required>
            <label for="exerciseName">Exercise Name</label>
          </div>
          <div class="form-floating mb-3">
            <input type="number" class="form-control" id="sets" name="sets" placeholder="sets" autocomplete="off" required>
            <label for="sets">Sets</label>
          </div>
          <div class="form-floating mb-3">
            <input type="number" class="form-control" id="reps" name="reps" placeholder="reps" autocomplete="off" required>
            <label for="reps">Repetitions</label>
          </div>
          <div>
            <input type="submit" class="btn btn-primary rounded-4" value="Add Exercise">
          </div>
        </form> 
      </div>

      <div class="pt-3 d-none" id="workout-body">
        
        <div class="row">
          <div class="col-md-6">
            <div class="calender-container mb-3">
              <div class="calendar " id="calendar">
                <div class="calender-month">
                  <i class="fas fa-angle-left prev"></i>
                  <div class="calender-date">
                    <h1></h1>
                    <p></p>
                  </div>
                  <i class="fas fa-angle-right next"></i>
                </div>
                <div class="calender-weekdays">
                  <div>S</div>
                  <div>M</div>
                  <div>T</div>
                  <div>W</div>
                  <div>T</div>
                  <div>F</div>
                  <div>S</div>
                </div>
                <div class="calender-days"> </div>
              </div>
            </div>
            
          </div>
          <div class="col-md-6">
            <div id="workout-list">
              <h3 id="dateID"></h3>
              <div id="noDataFound">
                <p>No workout plan found for the selected day</p>
              </div>
              <div id="receivedData">
                <div id="workoutHistory"></div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>

  </div>
</main>

<script src="/javascript/training.js"></script>
<%- include('partials/footer'); -%>