<%- include('partials/header'); -%>

<main class="m-4">
  <div class="content-area">
    <div class="row bg-blue-1 text-light rounded-top py-1">
        <div class="col-12">
            <h1>BMR Calculator</h1>
        </div>
    </div>
    <div class="row bg-white mt-2">
        <div class="col-md-8 p-3 custom-border">
            <form id="details">
                <div class="mb-4">
                    <p class="mb-1">Gender </p>
                    <input type="radio" class="form-check-input" name="gender" id="male"  value="0" checked="checked" required>
                    <label for="male" class="form-check-label">Male</label>
                    <input type="radio" class="form-check-input" name="gender" id="female" value="1" required>
                    <label for="female" class="form-check-label">Female</label>
                </div>
        
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" step="any" name="weight" id="weight" placeholder="Weight in kg" required>
                    <label for="weight" class="form-label">Weight (in kg) </label>
                </div class="form-floating mb-3">
        
                <div class="form-floating mb-3">
                    <input type="number" class="form-control"  step="any" name="height" id="height" placeholder="Height in cm" required>
                    <label for="height" class="form-label">Height (in cm) </label>
                </div>
        
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" step="any" name="age" id="age" placeholder="Age in years" required>
                    <label for="age" class="form-label">Age (in years) </label>
                </div>
        
                <div class="mb-3">
                    <p class="mb-1">Exercise frequency</p>
                    <select name="exercise" class="form-select" id="exercise" required>
                        <option value="">-- Select --</option>
                        <option value="1.2">No, I don't</option>
                        <option value="1.375">1-3 times in a week</option>
                        <option value="1.55">3-5 times in a week</option>
                        <option value="1.9">6-7 times a week</option>
                    </select>
                </div>
        
                <div class="mb-3">
                    <input class="form-control btn-pink py-2" type="submit">
                </div>
            </form>
        </div>
        <div class="col-md-4 p-3">
            <div class="mt-md-5 pt-md-5">
              <p class="<%= loginBtn %>" id="loginButton">
                <a href="/login" class="text-decoration-none">
                  <button class="btn-pink py-1 px-2">Login</button> 
                </a>
                to see last calculated value.
              </p>
    
              <div class="<%= loggedInUser %>" id="bmrBox">
                <h5 class="mb-0">Your BMR is </h5>
                <p class="fs-5 text-success" id="bmr"><%= bmrVal %> kcal/day</p>

                <h5 class="mb-0">Your TDEE is </h5>
                <p class="fs-5 text-success" id="tdee"><%= tdeeVal %> kcal/day</p>
              </div>
            </div>
        </div>
    </div>
  </div>
  </main>
  <script src="/javascript/bmr.js"></script>
<%- include('partials/footer'); -%>