<%- include('partials/header'); -%>

<section class="my-5">
  <div class="container-fluid my-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-4 col-lg-5 me-5">
        <img src="/images/bg2.webp" class="img-fluid d-none d-lg-block">
      </div>
      <div class="px-5 px-lg-0 col-md-8 col-lg-4 offset-lg-1 ">
        
          <div class="">
            <a href="/auth/google" class="link-dark text-decoration-none">
              <div class="text-center border p-2">
                <img class="me-3" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
                <span><strong>Sign up with Google</strong></span>  
              </div>
            </a>
            <!-- <div>
              <button type="button" class="btn btn-primary btn-floating mx-1">
                <i class="fab fa-twitter"></i>
              </button>
            </div>
              
            <div>
              <button type="button" class="btn btn-primary btn-floating mx-1">
                <i class="fab fa-facebook-f"></i>
              </button>
            </div> -->

          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>


          <form action="/signup" method="post">

            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-0" id="fullName" name="name" placeholder="Full Name" required>
              <label for="firstName">Full Name</label>
            </div>

            <!-- Email input -->
            <div class="form-floating mb-3">
              <input type="email" class="form-control rounded-0" id="email" name="email" placeholder="name@example.com" required>
              <label for="email">Email Address</label>
              <p id="emailError" class="d-none text-danger error"></p>
            </div>

            <!-- <div class="form-floating mb-3">
              <input type="tel" class="form-control rounded-0" id="mobile" name="mobile" placeholder="Mobile number" pattern="[6789][0-9]{9}"required>
              <label for="username">Mobile number</label>
              <p id="mobileError" class="d-none text-danger error"></p>
            </div> -->
            

            <!-- Password input -->
            <div class="form-floating mb-3">
              <input type="password" class="form-control rounded-0" id="password" name="password" placeholder="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[-._!`'#%&,:;<>=@{}~\$\(\)\*\+\/\\\?\[\]\^\|]+).{8,}$" required>
              <label for="floatingPassword">Password</label>
            </div>
            <div id="message" class="d-none">
              <p id="length" class="invalid">Minimum 8 characters</p>
              <p id="spcl" class="invalid">Special character</p>
              <p id="letter" class="invalid">Lowercase letter</p>
              <p id="capital" class="invalid">Uppercase letter</p>
              <p id="number" class="invalid">Number</p>
            </div>

            <div class="text-center mt-4 pt-2">
              <button type="submit" id="signup" class="btn btn-primary btn-lg btn-block w-100">Sign up</button>
            </div>
          </form> 

        
      </div>
    </div>
  </div>
</section>
<script src="/javascript/signup.js"></script>

<%- include('partials/footer'); -%>